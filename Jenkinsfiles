pipeline {
    agent any

    environment {
        DOCKERHUB_USER = 'zenowick'
        DOCKERHUB_PASS = 'vishu@9331'
        DB_PASSWORD = 'admin'
        IMAGE_NAME = "${DOCKERHUB_USER}/fastapi-postgres"
        IMAGE_TAG = "${env.BUILD_ID}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Vish8081/fastapi-postgres-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                sh "echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin"
                sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
                sh "docker push ${IMAGE_NAME}:latest"
            }
        }

        stage('Deploy') {
            steps {
                sh 'DB_PASSWORD=$DB_PASSWORD docker-compose down || true'
                sh 'DB_PASSWORD=$DB_PASSWORD docker-compose up -d'
            }
        }
    }

    post {
        always {
            sh 'DB_PASSWORD=$DB_PASSWORD docker-compose down || true'
        }
    }
}